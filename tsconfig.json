{
  "compilerOptions": {
    "outDir": "./dist/",
    "types": ["jest", "node"],
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "*": ["./src/*"],
    },
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./config/jest/**/*.ts"],
}